<% flash.each do |name, msg| %>
	<% if msg.is_a?(String) %>
		<div class="alert alert-<% if name == :notice %>success<% elsif name == :alert %>error<% else %><%= name %><% end %> fade in"> <!-- error, success, info, block(for longer msg) -->
			<button class="close" data-dismiss="alert">&#215;</button>
			<%= content_tag :div, msg, class: "flash_#{name}" %>
		</div>
	<% end %>
<% end %>